<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Music Player"
        android:textSize="18sp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10sp"
        android:background="@drawable/border">

        <RadioButton
            android:id="@+id/RB1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="La La La Brazil (Shakira)"
            android:onClick="RadioClick"/>

        <RadioButton
            android:id="@+id/RB2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="Big for your boots (Stormzy)"
            android:onClick="RadioClick"/>

        <RadioButton
            android:id="@+id/RB3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="See you again (Wiz Khalifa)"
            android:onClick="RadioClick"/>
    </RadioGroup>

    <ImageView
        android:id="@+id/CoverPic"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_margin="10sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_margin="10sp">

        <ImageButton
            android:id="@+id/BPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_button"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="5sp"
            android:onClick="StartPlay"/>

        <ImageButton
            android:id="@+id/BStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_stop_button"
            android:background="@android:color/transparent"
            android:layout_marginHorizontal="5sp"
            android:onClick="StopPlay"/>

        <ImageButton
            android:id="@+id/BPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5sp"
            android:background="@android:color/transparent"
            android:onClick="PausePlay"
            android:src="@drawable/ic_pause_button" />
    </LinearLayout>

</LinearLayout>